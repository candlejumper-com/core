{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "inlineSources": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": false,
    "lib": ["es2023"],
    "types": ["node", "jest"],
    "paths": {
      "@candlejumper/core": ["../apps/server-main/src/index.ts"],
      "@candlejumper/shared": ["../libs/shared/src/index.ts"]
    }
  },
  "include": ["./src/**/*.ts", "*.json"],
  "exclude": [
    "**/custom/**/*",
    "**/lib/**/*",
    "**/shared/**/*",
    "**/server-main/**/*",
    "**/modules/**/*",
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
