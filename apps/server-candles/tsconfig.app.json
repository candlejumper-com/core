{
  "extends": "./tsconfig.json",
  "composite": true,
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "../../dist/out-tsc",
    "module": "esnext",
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "./src/**/*.test.ts", "../../libs/**/*"],
  "include": ["./src/**/*.ts", "./src/**/*.worker.ts"]
}
