{
  "extends": "./tsconfig.json",
  "composite": true,
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "../../dist/out-tsc",
    "module": "esnext",
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "./src/**/*.test.ts"],
  "include": ["src/main.ts"]
}
