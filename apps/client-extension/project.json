{
  "name": "client-extension",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "candlejumper",
  "sourceRoot": "apps/client-extension/src",
  "tags": [],
  "targets": {
    "build": {
      "dependsOn": [
        {
          "params": "forward",
          "projects": "self"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "echo '123'",
        // "command": "ts-node ./scripts/generate-environment-files.ts",
        "cwd": "./",
        "forwardAllArgs": true,
        "parallel": false
      }
    },
    "sadf": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^sadf"],
      "options": {
        "main": "apps/client-extension/src/main.ts",
        "outputHashing": "none",
        "namedChunks": true,
        "outputPath": "dist/apps/client-extension/app",
        "index": "apps/client-extension/src/index.html",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/client-extension/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/client-extension/src/favicon.png", "apps/client-extension/src/assets", "apps/client-extension/src/manifest.json"],
        "styles": [
          // "apps/client-extension/src/style/styles.scss",
          {
            "input": "apps/client-extension/src/style/styles.scss",
            "inject": true,
            "bundleName": "styles"
          },
          // {
          //   "input": "node_modules/bootstrap/scss/bootstrap.scss",
          //   "inject": true,
          //   "bundleName": "bootstrap.custom"
          // },
          {
            "input": "apps/client-extension/src/injected/banner/banner.component.scss",
            "inject": false,
            "bundleName": "banner.component"
          }
        ],
        "customWebpackConfig": {
          "path": "apps/client-extension/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "5500kb",
              "maximumError": "11mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "52kb",
              "maximumError": "1114kb"
            }
          ],
          "outputHashing": "none"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "dependsOn": ["^buil222d"],
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "client-extension:build:production"
        },
        "development": {
          "buildTarget": "client-extension:build:development",
          "port": 4300
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "client-extension:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/client-extension/jest.config.ts",
        "webWorkerTsConfig": "apps/client-extension/tsconfig.worker.json"
      }
    }
  }
}
