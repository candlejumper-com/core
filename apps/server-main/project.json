{
  "name": "server-main",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server-main/src",
  "projectType": "application",
  "targets": {
    "pm2": {
      "executor": "nx-pm2-plugin:pm2-executor",
      "options": {
        "command": "server-main:serve",
        "name": "server-main"
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/server-main",
        "main": "apps/server-main/src/main.ts",
        "tsConfig": "apps/server-main/tsconfig.app.json",
        "assets": ["apps/server-main/src/assets", "apps/server-main/src/modules/ai-manager/ai-worker.ts"],
        "isolatedConfig": true,
        "webpackConfig": "apps/server-main/webpack.config.js",
        "additionalEntryPoints": [
          {
            "entryName": "ai-worker",
            "entryPath": "apps/server-main/src/modules/ai-manager/ai-worker.ts"
          }
        ]
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "server-main:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "server-main:build:development"
        },
        "production": {
          "buildTarget": "server-main:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/server-main/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/server-main/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
