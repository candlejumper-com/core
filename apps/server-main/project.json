{
  "name": "server-main",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server-main/src",
  "projectType": "application",
  "targets": {
    "pm2": {
      "executor": "nx-pm2-plugin:pm2-executor",
      "options": {
        "command": "server-main:serve",
        "name": "server-main"
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/server-main",
        "main": "apps/server-main/src/main.ts",
        "tsConfig": "apps/server-main/tsconfig.app.json",
        "assets": [],
        "format": ["cjs"],
        "bundle": true,
        "generatePackageJson": false,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
          // "additionalEntryPoints": [
          //   {
          //     "entryName": "ai-worker",
          //     "entryPath": "apps/server-main/src/modules/ai-manager/ai-worker.ts"
          //   },
          //   {
          //     "entryName": "backtest.worker",
          //     "entryPath": "apps/server-main/src/modules/backtest-manager/backtest.worker.ts"
          //   },
          //   {
          //     "entryName": "editor.worker",
          //     "entryPath": "apps/server-main/src/modules/editor-manager/editor.worker.ts"
          //   }
          // ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "server-main:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "server-main:build:development"
        },
        "production": {
          "buildTarget": "server-main:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/server-main/jest.config.ts"
      }
    }
  },
  "tags": []
}
